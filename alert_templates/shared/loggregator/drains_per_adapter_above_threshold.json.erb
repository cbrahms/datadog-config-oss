{
	"name": "<%= environment %> CF: More than {{threshold}} drains per adapter",
	"type": "query alert",
	"query": "avg(last_30m):avg:datadog.nozzle.cf_syslog_drain.adapter.drain_bindings{bosh_environment:vpc-bosh-run-pivotal-io} > 550",
	"message": "## Description:\n{{#is_alert}} <%= loggregator_pagerduty %> {{/is_alert}} \n{{#is_warning}}@cf-loggregator@pivotal.io{{/is_warning}} \n\nThere are more than {{threshold}} drains per adapter. You need to scale the number of adapters. ",
	"tags": [],
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"new_host_delay": 300,
		"require_full_window": true,
		"notify_no_data": false,
		"renotify_interval": "0",
		"escalation_message": "",
		"no_data_timeframe": null,
		"include_tags": false,
		"synthetics_check_id": null,
		"thresholds": {
			"critical": 550,
			"warning": 400
		}
	}
}
